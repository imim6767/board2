<h1>게시판</h1>
<a href="/posts/new">새 글쓰기</a>

<table>
    <tr>
        <th>ID</th>
        <th>제목</th>
        <th>작성날짜</th>
    </tr>

    <% @posts.each do |p| %>
        <tr>
            <td><%= p.id %></td>
            <td><a href="/posts/show/<%= p.id %>"><%= p.title %></a></td>
            <td><%= time_ago_in_words(p.created_at) %> ago</td>
        </tr>
    <% end %>
    
</table>


